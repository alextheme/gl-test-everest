mixin footer
	footer.footer
		.footer_in.section_in.m_copyright_mod
			.footer_container.flex_col_mod.first_col_mod
				a.footer_logo(href= '#')
					.icon_logo_wrap
						+icon('logo_footer')
				.footer_social_wrap
					.footer_social__title Платформа AI
					+social({
						mod_block: 'footer_mod',
						items: [
							{ name_icon: 'facebook', mod_icon: '', mod_link: 'footer_mod' },
							{ name_icon: 'twitter', mod_icon: '', mod_link: 'footer_mod' },
							{ name_icon: 'rss', mod_icon: '', mod_link: 'footer_mod' },
							{ name_icon: 'youtube', mod_icon: '', mod_link: 'footer_mod' },
						]
					})
				.footer_copyright.m_copyright_mod
					span ©
					span 2020 Everest
						br
						| ALL RIGHTS RESERVED
				
			.footer_container.mobile_hidden_mod
				.footer_menu_wrap 
					+menu({
						gl_class: 'footer_menu',
						gl_mod: '',
						items: [
							{ title: 'Кто мы', url: '#', active: false },
							{ title: 'Что мы делаем', url: '#', active: false },
							{ title: 'Направления работы', url: '#', active: false },
							{ title: 'Компетенции', url: '#', active: false },
							{ title: 'Команда', url: '#', active: false },
							{ title: 'Новости', url: '#', active: false },
							{ title: 'Партнеры', url: '#', active: false },
							{ title: 'Контакты', url: '#', active: false },
						]
					})

					ul.footer_menu__list  
						li.footer_menu__item
							a.footer_menu__link(href= '#') Аналитика
						li.footer_menu__item.sub_menu
							.footer_sub_menu__title Решения:
							+menu({
								gl_class: 'footer_sub_menu',
								items: [
									{ title: 'Банки', url: '#', active: false },
									{ title: 'Страхование', url: '#', active: false },
									{ title: 'Здравоохранение', url: '#', active: false },
									{ title: 'Транспорт и логистика', url: '#', active: false },
									{ title: 'Государственный сектор', url: '#', active: false },
									{ title: 'Ритейл и eCommerce', url: '#', active: false },
									{ title: 'Телекоммуникации', url: '#', active: false },
